{
  "name": "@cto.af/linewrap",
  "version": "1.1.0",
  "description": "Wrap lines using the Unicode Line Breaking algorithm from UAX #14",
  "main": "lib/index.js",
  "type": "module",
  "types": "types/index.d.ts",
  "scripts": {
    "clean": "rimraf docs types",
    "test": "c8 mocha",
    "lint": "eslint . --ext js,cjs",
    "docs": "typedoc",
    "types": "tsc",
    "prebuild": "npm run clean",
    "build": "npm run types && npm run lint && npm run docs && npm run test && npm pack --dry-run"
  },
  "keywords": [
    "uax14",
    "word-wrap",
    "wordwrap",
    "linebreak",
    "unicode",
    "grapheme",
    "cluster"
  ],
  "author": "Joe Hildebrand <joe-github@cursive.net>",
  "repository": "cto-af/linewrap",
  "license": "MIT",
  "devDependencies": {
    "@cto.af/eslint-config": "3.0.2",
    "@types/node": "20.8.10",
    "c8": "8.0.1",
    "eslint": "8.52.0",
    "mocha": "10.2.0",
    "rimraf": "5.0.5",
    "typedoc": "0.25.3",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@cto.af/linebreak": "1.2.2",
    "@cto.af/string-width": "2.1.0"
  },
  "engines": {
    "node": ">= 16"
  }
}
